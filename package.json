{
  "name": "locky",
  "version": "1.0.0",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "echo 'Skipping icon generation - using pre-built icons'",
    "build:mac": "electron-builder --mac --x64 --arm64",
    "build:win": "electron-builder --win --x64 --ia32",
    "build:win:arm64": "electron-builder --win --arm64",
    "build:linux": "electron-builder --linux --x64",
    "build:linux:arm64": "electron-builder --linux --arm64",
    "build:linux:armv7l": "electron-builder --linux --armv7l",
    "build:linux:deb": "electron-builder --linux deb --x64",
    "build:linux:rpm": "electron-builder --linux rpm --x64",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "encryption",
    "security",
    "file-vault"
  ],
  "author": "",
  "license": "Unlicense",
  "description": "A secure file vault application with encryption",
  "dependencies": {
    "crypto-js": "^4.2.0",
    "fs-extra": "^11.3.2",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "electron": "^28.1.0",
    "electron-builder": "^26.0.12",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.4"
  },
  "build": {
    "appId": "com.cogrow4.locky",
    "productName": "Locky",
    "directories": {
      "output": "dist",
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "!assets/build/icon.iconset/",
      "!assets/icon.svg",
      "!scripts/",
      "!README.md",
      "!LICENSE",
      "!package-lock.json",
      "!**/*.md"
    ],
    "mac": {
      "icon": "assets/build/icon.icns",
      "target": ["dmg", "zip"],
      "arch": ["x64", "arm64"]
    },
    "win": {
      "icon": "assets/build/icon.ico",
      "target": ["nsis", "portable"],
      "arch": ["x64", "ia32", "arm64"]
    },
    "linux": {
      "icon": "assets/build/icon.png",
      "target": ["AppImage", "deb", "rpm"],
      "arch": ["x64", "arm64", "armv7l"]
    }
  }
}
